{
  "$schema": "http://json.schemastore.org/template",
  "author": "Microsoft",
  "classifications": ["MAUI", "Blazor", "Copilot", "Mobile", "Desktop"],
  "identity": "Microsoft.Maui.Reflexive.Template",
  "name": ".NET MAUI Blazor Hybrid App with Copilot",
  "shortName": "maui-reflexive",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "MauiReflexive",
  "preferNameDirectory": true,
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net10.0",
          "description": "Target .NET 10.0"
        }
      ],
      "defaultValue": "net10.0",
      "replaces": "net10.0"
    }
  },
  "sources": [
    {
      "source": "./MauiReflexive",
      "target": "./"
    }
  ],
  "primaryOutputs": [
    {
      "path": "MauiReflexive.csproj"
    }
  ],
  "postActions": [
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "dotnet",
        "args": "tool restore"
      },
      "manualInstructions": [
        {
          "text": "Run 'dotnet tool restore' to install the maui-devflow CLI tool."
        }
      ],
      "continueOnError": true,
      "description": "Restore local dotnet tools (maui-devflow CLI)"
    }
  ]
}
